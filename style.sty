\newcommand*{\makecontents}
{
    \begin{spacing}{1}
    \hfill
    \parbox[t]{.95\textwidth}
    {
        \begin{minipage}[c][0.75\textheight]{\textwidth}
            \tableofcontents
        \end{minipage}
    }
    \end{spacing}
}
\AtBeginSection[]
{
    \begin{frame}
        \frametitle{Contents}
        \begin{spacing}{1}
            \hfill
            \parbox[t]{.95\textwidth}
            {
                \begin{minipage}[c][0.75\textheight]{\textwidth}
                    \tableofcontents[currentsection]
                \end{minipage}
            }
        \end{spacing}
    \end{frame}
}
